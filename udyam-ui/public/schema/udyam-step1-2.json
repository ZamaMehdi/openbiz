{
  "forms": [
    {
      "step": 1,
      "title": "Aadhaar Verification",
      "fields": [
        {
          "name": "aadhaar",
          "id": "txtAadhaar",
          "label": "Aadhaar Number",
          "type": "text",
          "required": true,
          "pattern": "^[0-9]{12}$",
          "maxlength": 12,
          "placeholder": "Enter 12 digit Aadhaar number"
        },
        {
          "name": "aadhaarName",
          "id": "txtAadhaarName",
          "label": "Name as per Aadhaar",
          "type": "text",
          "required": true,
          "maxlength": 100,
          "placeholder": "Enter name exactly as shown on Aadhaar"
        }
      ]
    },
    {
      "step": 2,
      "title": "Business Details",
      "fields": [
        {
          "name": "businessName",
          "id": "txtBusinessName",
          "label": "Business/Company Name",
          "type": "text",
          "required": true,
          "maxlength": 200,
          "placeholder": "Enter business/company name"
        },
        {
          "name": "businessType",
          "id": "ddlBusinessType",
          "label": "Type of Business",
          "type": "select",
          "required": true,
          "options": [
            "Proprietorship",
            "Partnership",
            "Hindu Undivided Family (HUF)",
            "Private Limited Company",
            "Public Limited Company",
            "Limited Liability Partnership (LLP)",
            "Cooperative Society",
            "Trust",
            "Other"
          ]
        },
        {
          "name": "pan",
          "id": "txtPAN",
          "label": "PAN Number",
          "type": "text",
          "required": false,
          "pattern": "^[A-Za-z]{5}[0-9]{4}[A-Za-z]$",
          "maxlength": 10,
          "placeholder": "Enter PAN number (optional)"
        },
        {
          "name": "pincode",
          "id": "txtPincode",
          "label": "PIN Code",
          "type": "text",
          "required": true,
          "pattern": "^[0-9]{6}$",
          "maxlength": 6,
          "placeholder": "Enter 6 digit PIN code"
        },
        {
          "name": "city",
          "id": "txtCity",
          "label": "City",
          "type": "text",
          "required": true,
          "maxlength": 50,
          "placeholder": "Enter city name"
        },
        {
          "name": "state",
          "id": "ddlState",
          "label": "State",
          "type": "select",
          "required": true,
          "options": [
            "Andhra Pradesh",
            "Arunachal Pradesh",
            "Assam",
            "Bihar",
            "Chhattisgarh",
            "Goa",
            "Gujarat",
            "Haryana",
            "Himachal Pradesh",
            "Jharkhand",
            "Karnataka",
            "Kerala",
            "Madhya Pradesh",
            "Maharashtra",
            "Manipur",
            "Meghalaya",
            "Mizoram",
            "Nagaland",
            "Odisha",
            "Punjab",
            "Rajasthan",
            "Sikkim",
            "Tamil Nadu",
            "Telangana",
            "Tripura",
            "Uttar Pradesh",
            "Uttarakhand",
            "West Bengal",
            "Delhi",
            "Jammu and Kashmir",
            "Ladakh",
            "Chandigarh",
            "Dadra and Nagar Haveli and Daman and Diu",
            "Lakshadweep",
            "Puducherry",
            "Andaman and Nicobar Islands"
          ]
        },
        {
          "name": "address",
          "id": "txtAddress",
          "label": "Complete Address",
          "type": "textarea",
          "required": true,
          "maxlength": 500,
          "placeholder": "Enter complete business address"
        },
        {
          "name": "email",
          "id": "txtEmail",
          "label": "Email Address",
          "type": "email",
          "required": false,
          "maxlength": 100,
          "placeholder": "Enter business email address (optional)"
        }
      ]
    }
  ],
  "metadata": {
    "scrapedAt": "2024-01-01T00:00:00.000Z",
    "source": "Udyam Registration Portal",
    "version": "1.0.0",
    "description": "Schema for Udyam MSME registration form steps 1 and 2"
  }
}




